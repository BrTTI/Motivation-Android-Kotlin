<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearlayout_header"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="@color/md_theme_primary"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="16dp">

        <ImageView
            android:id="@+id/imageview_all"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/desc_ic_all"
            android:src="@drawable/ic_all" />

        <ImageView
            android:id="@+id/imageview_happy"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="98dp"
            android:layout_marginEnd="98dp"
            android:contentDescription="@string/desc_ic_happy"
            android:src="@drawable/ic_happy" />

        <ImageView
            android:id="@+id/imageview_sun"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/desc_ic_sun"
            android:src="@drawable/ic_sun" />
    </LinearLayout>

    <TextView
        android:id="@+id/textview_hello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayout_header"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/cabin"
        android:gravity="center"
        android:text="@string/title_hello"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textview_msg_motivation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/cabin"
        android:text="@string/title_msg_motivation"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <View
        android:layout_width="200dp"
        android:layout_height="4dp"
        android:layout_below="@id/textview_msg_motivation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@color/md_theme_primary" />

    <Button
        android:id="@+id/button_new_sentence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_custom"
        android:text="@string/button_new_sentence"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="48dp"
        android:fontFamily="@font/cabin"
        android:textSize="18sp" />

</RelativeLayout>