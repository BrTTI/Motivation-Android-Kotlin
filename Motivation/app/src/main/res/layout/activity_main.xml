<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <View
        android:id="@+id/view_header"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@color/purple" />

    <ImageView
        android:id="@+id/imageview_all"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignStart="@id/view_header"
        android:layout_alignTop="@id/view_header"
        android:layout_alignBottom="@id/view_header"
        android:layout_marginStart="32dp"

        android:contentDescription="@string/desc_ic_all"
        android:src="@drawable/ic_all" />

    <ImageView
        android:id="@+id/imageview_happy"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@id/view_header"
        android:layout_alignBottom="@id/view_header"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/desc_ic_happy"
        android:src="@drawable/ic_happy" />

    <ImageView
        android:id="@+id/imageview_sun"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@id/view_header"
        android:layout_alignEnd="@id/view_header"
        android:layout_alignBottom="@id/view_header"
        android:layout_marginEnd="32dp"
        android:contentDescription="@string/desc_ic_sun"
        android:src="@drawable/ic_sun" />

    <TextView
        android:id="@+id/textview_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/cabin"
        android:text="@string/title_hello"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textview_msg_motivation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="8dp"
        android:fontFamily="@font/cabin"
        android:text="@string/title_msg_motivation"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <View
        android:layout_width="200dp"
        android:layout_height="4dp"
        android:layout_below="@id/textview_msg_motivation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:elevation="2dp"
        android:background="@color/purple" />

    <Button
        android:id="@+id/button_new_sentence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="64dp"
        android:backgroundTint="@color/purple"
        android:fontFamily="@font/cabin"
        android:text="@string/button_new_sentence"
        android:textSize="18sp" />

</RelativeLayout>